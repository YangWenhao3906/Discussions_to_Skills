                {
                    "sentence_categories": [],
                    "sentence_skills": [],
                    "text": "![image](https://user-images.githubusercontent.com/5899315/222418816-b7002534-5bda-4d1e-8876-d15b610dc043.png)\r\n![image](https://user-images.githubusercontent.com/5899315/222418864-4b9ee776-5dd8-4945-9038-bc2bf22262f1.png)\r\n",
                    "_notes": ""
                }
            ],
            "_notes": "",
            "created_at": "2023-03-02 11:42:03",
